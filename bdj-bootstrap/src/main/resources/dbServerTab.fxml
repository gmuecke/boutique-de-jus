<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.TextFlow?>
<VBox xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      fx:id="this"
      prefHeight="${this.parent.height}" prefWidth="${this.parent.width}"
      fx:controller="io.bdj.control.DatabaseController">
   <children>
      <GridPane fx:id="controlGrid" >
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button mnemonicParsing="false" onAction="#startServer" text="Start DB Server" fx:id="startButton" />
            <Button mnemonicParsing="false" onAction="#stopServer" text="Stop DB Server" GridPane.rowIndex="1" fx:id="stopButton" disable="true" />
            <Button mnemonicParsing="false" onAction="#restartServer" text="Restart DB Server" GridPane.rowIndex="2" fx:id="restartButton" disable="true"/>
            <Circle fx:id="processStatus" fill="RED" radius="10.0" stroke="BLACK" strokeType="INSIDE" GridPane.columnIndex="1" />
             <Label text="TimeSlice:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
             <Spinner fx:id="timeSlice" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
             <Label text="Threads:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
             <Spinner fx:id="threads" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
         </children>
      </GridPane>
       <ScrollPane fx:id="scrollPane" prefHeight="${scrollPane.parent.height}" prefWidth="${scrollPane.parent.width}">
           <content>
               <TextFlow styleClass="console" fx:id="consoleArea"  prefHeight="${consoleArea.parent.height}" prefWidth="${consoleArea.parent.width}"/>
           </content>
       </ScrollPane>
   </children>
</VBox>
