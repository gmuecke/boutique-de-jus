<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.TextFlow?>
<VBox fx:id="this" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="${this.parent.height}" prefWidth="${this.parent.width}"
      xmlns="http://javafx.com/javafx/8.0.45" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="io.bdj.control.WebServerController">
    <children>

        <GridPane fx:id="controlGrid">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button fx:id="startButton" mnemonicParsing="false" onAction="#startServer" text="Start Web Server"/>
                <Button fx:id="stopButton" disable="true" mnemonicParsing="false" onAction="#stopServer"
                        text="Stop Web Server" GridPane.rowIndex="1"/>
                <!--<Button fx:id="restartButton" disable="true" mnemonicParsing="false" onAction="#restartServer"-->
                        <!--text="Restart Web Server" GridPane.rowIndex="2"/>-->
                <Circle fx:id="processStatus" fill="RED" radius="10.0" stroke="BLACK" strokeType="INSIDE"
                        GridPane.columnIndex="1"/>
                <Label text="Select WAR:" GridPane.columnIndex="4"/>
                <ChoiceBox fx:id="warChooser" prefWidth="150.0" GridPane.columnIndex="5"/>
                <CheckBox fx:id="debugMode" mnemonicParsing="false" text="Debug Mode" GridPane.columnIndex="5"
                          GridPane.rowIndex="1"/>
                <Label text="Debug Port:" GridPane.columnIndex="4" GridPane.rowIndex="2"/>
                <Spinner fx:id="debugPort" GridPane.columnIndex="5" GridPane.rowIndex="2"/>
                <Label text="Http Port:" GridPane.columnIndex="2"/>
                <Spinner fx:id="httpPort" GridPane.columnIndex="3"/>
                <Label text="Min Threads:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <Spinner fx:id="minThreads" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                <Label text="Max Threads:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <Spinner fx:id="maxThreads" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
                <Label text="Max Heap (Xmx):" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                <HBox GridPane.columnIndex="3" GridPane.rowIndex="3">
                    <Spinner fx:id="xmx" maxWidth="100"/>
                    <ChoiceBox fx:id="xmxUnit"/>
                </HBox>
                <Label text="Initial Heap (Xms):" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
                <HBox GridPane.columnIndex="3" GridPane.rowIndex="4">
                    <Spinner fx:id="xms" maxWidth="100"/>
                    <ChoiceBox fx:id="xmsUnit"/>
                </HBox>
            </children>
        </GridPane>
        <TabPane fx:id="appTabPane"
                 prefHeight="${appTabPane.parent.height}" prefWidth="${appTabPane.parent.width}"
                 tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab fx:id="dbServerTab" text="Console">
                    <content>
                        <ScrollPane fx:id="scrollPane" prefHeight="${scrollPane.parent.height}" prefWidth="${scrollPane.parent.width}">
                            <content>
                                <TextFlow fx:id="consoleArea" prefHeight="${consoleArea.parent.height}"
                                          prefWidth="${consoleArea.parent.width}" styleClass="console"/>
                            </content>
                        </ScrollPane>
                    </content>
                </Tab>
                <Tab fx:id="webServerTab" text="App Config">
                    <content>
                        <GridPane fx:id="controlGrid" alignment="TOP_LEFT" maxWidth="300" maxHeight="90">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label text="Printer Count" />
                                <Spinner fx:id="printerCount" GridPane.columnIndex="1" />
                                <Label text="Print Job Size" GridPane.rowIndex="1"/>
                                <HBox GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <Spinner fx:id="printJobSize" maxWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                    <ChoiceBox fx:id="printJobSizeUnit" />
                                </HBox>
                                <Label text="Print Duration (s)" GridPane.rowIndex="2"/>
                                <Spinner fx:id="printerDuration" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                            </children>
                        </GridPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>


    </children>
</VBox>
