<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>

    <definition name="baseLayout" template="/WEB-INF/tiles/layout.jsp">

        <put-attribute name="header" value="/WEB-INF/tiles/header.jsp"/>
        <put-attribute name="topmenu"   value="/WEB-INF/tiles/topmenu.jsp"/>
        <put-attribute name="menu"   value="/WEB-INF/tiles/menu.jsp"/>
        <put-attribute name="body"   value="/WEB-INF/tiles/body.jsp"/>
        <put-attribute name="footer"   value="/WEB-INF/tiles/footer.jsp"/>
    </definition>

    <definition name="home" extends="baseLayout">
        <put-attribute name="title"  value="home"/>
        <put-attribute name="body"   value="/WEB-INF/tiles/home.jsp"/>
    </definition>

    <definition name="login" extends="baseLayout">
        <put-attribute name="title"  value="Login"/>
        <put-attribute name="body"   value="/WEB-INF/tiles/login.jsp"/>
    </definition>

    <definition name="register" extends="baseLayout">
        <put-attribute name="title"  value="Registration"/>
        <put-attribute name="body"   value="/WEB-INF/tiles/register.jsp"/>
    </definition>
    <definition name="registerSuccess" extends="baseLayout">
        <put-attribute name="title"  value="Registration"/>
        <put-attribute name="body"   value="/WEB-INF/tiles/registerSuccess.jsp"/>
    </definition>

    <definition name="loginError" extends="baseLayout">
        <put-attribute name="title"  value="Login"/>
        <put-attribute name="body"   value="/WEB-INF/tiles/loginError.jsp"/>
    </definition>

    <definition name="userProfile" extends="baseLayout" role="users">
        <put-attribute name="title"  value="UserProfile"/>
        <put-attribute name="body"   value="/WEB-INF/tiles/userprofile.jsp"/>
    </definition>

    <!-- Shop content-->
    <definition name="juices" extends="baseLayout" >
        <put-attribute name="title"  value="Juice Shop - Juices"/>
        <put-attribute name="body"   value="/WEB-INF/tiles/shop/juices.jsp"/>
    </definition>
    <definition name="accessoires" extends="baseLayout" >
        <put-attribute name="title"  value="Juice Shop - Accessoires"/>
        <put-attribute name="body"   value="/WEB-INF/tiles/shop/accessoires.jsp"/>
    </definition>
    <definition name="books" extends="baseLayout" >
        <put-attribute name="title"  value="Juice Shop - Books"/>
        <put-attribute name="body"   value="/WEB-INF/tiles/shop/books.jsp"/>
    </definition>
    <definition name="courses" extends="baseLayout" >
        <put-attribute name="title"  value="Juice Shop - Courses"/>
        <put-attribute name="body"   value="/WEB-INF/tiles/shop/courses.jsp"/>
    </definition>

    <!-- order process -->
    <definition name="cart" extends="baseLayout" >
        <put-attribute name="title"  value="Shopping cart"/>
        <put-attribute name="body"   value="/WEB-INF/tiles/shop/cart.jsp"/>
    </definition>
    <definition name="order" extends="baseLayout" >
        <put-attribute name="title"  value="Order Confirmation"/>
        <put-attribute name="body"   value="/WEB-INF/tiles/shop/order.jsp"/>
    </definition>
    <definition name="orderSuccess" extends="baseLayout" >
        <put-attribute name="title"  value="Order Success"/>
        <put-attribute name="body"   value="/WEB-INF/tiles/shop/orderSuccess.jsp"/>
    </definition>
</tiles-definitions>
